---
 
    
  - name: Download Zabbix Debian 11 (bullseye) release deb file
    get_url:
      url="http://repo.zabbix.com/zabbix/5.0/debian/pool/main/z/zabbix-release/zabbix-release_5.0-1+bullseye_all.deb"
      dest="/tmp/zabbix-release_3.2-1.deb"
    when: ansible_os_family == "Debian" and ansible_distribution == "Debian" and ansible_distribution_major_version|int == 11

  - name: Download Zabbix Debian 10 (Buster) release deb file
    get_url:
      url="http://repo.zabbix.com/zabbix/5.0/debian/pool/main/z/zabbix-release/zabbix-release_5.0-1+buster_all.deb"
      dest="/tmp/zabbix-release_3.2-1.deb"
    when: ansible_os_family == "Debian" and ansible_distribution == "Debian" and ansible_distribution_major_version|int == 10

  - name: Download Zabbix Debian 9 (Stretch) release deb file
